<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orhotechnologies.barman">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BarMan">

        <activity
            android:name=".daybook.ShowDailybook"
            android:screenOrientation="portrait" />
        <activity
            android:name=".daybook.ViewDailybook"
            android:screenOrientation="portrait" />
        <activity
            android:name=".items.AddSellOffer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sell.AddSellItem"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sell.AddSell"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sell.ShowSell"
            android:screenOrientation="portrait" />
        <activity
            android:name=".purchase.AddPurchaseItem"
            android:screenOrientation="portrait" />
        <activity
            android:name=".purchase.AddPurchase"
            android:screenOrientation="portrait" />
        <activity
            android:name=".purchase.ShowPurchase"
            android:screenOrientation="portrait" />
        <activity
            android:name=".traders.AddTrader"
            android:screenOrientation="portrait" />
        <activity
            android:name=".traders.ShowTraders"
            android:screenOrientation="portrait" />
        <activity
            android:name=".items.AddItem"
            android:screenOrientation="portrait" />
        <activity
            android:name=".items.ShowItems"
            android:screenOrientation="portrait" />
        <activity
            android:name=".items.ShowStocks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Welcome"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>